                                                    BackgroundColor="Transparent"
                                                    BorderColor="{StaticResource Error}"
                                                    BorderWidth="2"
                                                    TextColor="{StaticResource Error}"
                                                    VerticalOptions="Center"
                                                    IsVisible="{Binding IsHuggingFaceReference}" />
