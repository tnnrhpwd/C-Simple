                                                <Frame IsVisible="{Binding IsDownloading}"
                                                       BackgroundColor="Transparent"
                                                       BorderColor="Transparent"
                                                       Padding="0"
                                                       VerticalOptions="End"
                                                       HorizontalOptions="Fill"
                                                       HeightRequest="4"
                                                       Margin="0,44,0,0">
