                                                <Label Text="{Binding DownloadStatus}"
                                                       IsVisible="{Binding IsDownloading}"
                                                       FontSize="10"
                                                       TextColor="{StaticResource TextSecondary}"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="End"
                                                       BackgroundColor="Transparent"
                                                       Margin="0,50,0,0" />
