<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CSimple.ViewModels"
             xmlns:models="clr-namespace:CSimple.Models"
             x:DataType="viewmodels:OrientPageViewModel"
             x:Class="CSimple.Pages.OrientPage"
             Title="Orient &amp; Refine Model">

    <ScrollView>
        <VerticalStackLayout Padding="{StaticResource PagePadding}" Spacing="{StaticResource SpacingLarge}">

            <Label Text="Model Orientation &amp; Training"
                   FontSize="{StaticResource FontSizeTitle}"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Model Details Section -->
            <Frame CornerRadius="{StaticResource CornerRadiusMedium}" Padding="{StaticResource CardPadding}" BorderColor="{StaticResource Primary}">
                <VerticalStackLayout Spacing="{StaticResource SpacingSmall}">
                    <Label Text="Selected Model Details" FontSize="{StaticResource FontSizeSubtitle}" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="{StaticResource SpacingTiny}" ColumnSpacing="{StaticResource SpacingMedium}">
                        <Label Grid.Row="0" Grid.Column="0" Text="Name:" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding SelectedModel.Name, FallbackValue='Loading...'}" />

                        <Label Grid.Row="1" Grid.Column="0" Text="Description:" FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding SelectedModel.Description, FallbackValue='-'}" />

                        <Label Grid.Row="2" Grid.Column="0" Text="Type:" FontAttributes="Bold" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding SelectedModel.Type, FallbackValue='-'}" />

                        <Label Grid.Row="3" Grid.Column="0" Text="ID:" FontAttributes="Bold" />
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding SelectedModel.Id, FallbackValue='-'}" FontSize="{StaticResource FontSizeCaption}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Training Control Section -->
            <Frame CornerRadius="{StaticResource CornerRadiusMedium}" Padding="{StaticResource CardPadding}" BorderColor="{StaticResource Secondary}">
                <VerticalStackLayout Spacing="{StaticResource SpacingMedium}">
                    <Label Text="Training Controls" FontSize="{StaticResource FontSizeSubtitle}" FontAttributes="Bold" />

                    <Label Text="{Binding TrainingStatus}" FontSize="{StaticResource FontSizeBody}" />
                    <ProgressBar Progress="{Binding TrainingProgress}" />

                    <Button Text="Start Training"
                            Command="{Binding StartTrainingCommand}"
                            BackgroundColor="{StaticResource Success}"
                            TextColor="{StaticResource TextOnPrimary}" />

                    <Button Text="Manage Training Data"
                            Command="{Binding ManageTrainingDataCommand}"
                            BackgroundColor="{StaticResource Tertiary}"
                            TextColor="{StaticResource TextOnPrimary}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Performance Section -->
            <Frame CornerRadius="{StaticResource CornerRadiusMedium}" Padding="{StaticResource CardPadding}" BorderColor="{StaticResource Tertiary}">
                <VerticalStackLayout Spacing="{StaticResource SpacingMedium}">
                    <Label Text="Performance Metrics" FontSize="{StaticResource FontSizeSubtitle}" FontAttributes="Bold" />

                    <Label Text="{Binding PerformanceMetrics}" LineBreakMode="WordWrap" />

                    <Button Text="View/Refresh Performance Details"
                            Command="{Binding ViewPerformanceCommand}"
                            BackgroundColor="{StaticResource Info}"
                            TextColor="{StaticResource TextOnPrimary}" />
                    <!-- Potential Placeholder for Charts/Graphs -->
                    <BoxView HeightRequest="100" Color="{StaticResource BackgroundSecondary}" CornerRadius="{StaticResource CornerRadiusSmall}" />
                    <Label Text="(Performance charts placeholder)" HorizontalOptions="Center" TextColor="{StaticResource TextSecondary}" FontSize="{StaticResource FontSizeCaption}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>