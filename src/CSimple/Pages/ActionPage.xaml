<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CSimple.Pages"
             xmlns:converters="clr-namespace:CSimple.Converters"
             x:Class="CSimple.Pages.ActionPage"
             Title="Actions">
    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto"
          Padding="12">
        <!-- Header -->
        <Grid Grid.Row="0"
              ColumnDefinitions="*,Auto"
              Margin="0,0,0,8">
            <StackLayout Grid.Column="0"
                         Orientation="Horizontal">
                <Label Text="Your Actions"
                       FontSize="24"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="StartAndExpand" />
                <Label Text="{Binding ActionGroups.Count, StringFormat='({0})'}"
                       FontSize="20"
                       TextColor="Gray"
                       VerticalOptions="Center"
                       Margin="5,0,0,0" />
            </StackLayout>
            <StackLayout Grid.Column="1"
                         Orientation="Horizontal">
                <Button Text="Refresh"
                        Command="{Binding RefreshCommand}"
                        HorizontalOptions="End"
                        WidthRequest="90" />
                <Button Text="Train Model"
                        Command="{Binding TrainModelCommand}"
                        BackgroundColor="{StaticResource TertiaryColor}"
                        HorizontalOptions="End"
                        WidthRequest="110"
                        Margin="8,0,0,0" />
            </StackLayout>
        </Grid>
        <!-- Filters and Search -->
        <Grid Grid.Row="1"
              Margin="0,0,0,8"
              ColumnDefinitions="*,*,Auto">
            <Picker Grid.Column="0"
                    x:Name="CategoryPicker"
                    Title="Filter by Category"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory}"
                    Margin="0,0,5,0" />
            <Picker Grid.Column="1"
                    x:Name="SortPicker"
                    Title="Sort By"
                    ItemsSource="{Binding SortOptions}"
                    SelectedItem="{Binding SelectedSortOption}"
                    SelectedIndexChanged="OnSortOrderChanged"
                    Margin="5,0,5,0" />
            <SearchBar Grid.Column="2"
                       Placeholder="Search actions"
                       Text="{Binding SearchText}"
                       SearchCommand="{Binding SearchCommand}"
                       WidthRequest="200"
                       Margin="5,0,0,0" />
        </Grid>
        <!-- Content Area -->
        <Grid Grid.Row="2">
            <!-- Empty State Message -->
            <StackLayout IsVisible="{Binding ShowEmptyMessage}"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">
                <Image Source="empty_actions.png"
                       HeightRequest="100"
                       Margin="0,0,0,20" />
                <Label Text="No actions found"
                       FontSize="18"
                       HorizontalOptions="Center" />
                <Label Text="Create new actions in the Observe tab"
                       FontSize="14"
                       TextColor="Gray"
                       HorizontalOptions="Center" />
                <Button Text="Go to Observe"
                        Command="{Binding NavigateToObservePageCommand}"
                        Margin="0,20,0,0"
                        HorizontalOptions="Center" />
            </StackLayout>
            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
            <!-- Actions List -->
            <CollectionView ItemsSource="{Binding ActionGroups}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedActionGroup, Mode=TwoWay}"
                            IsVisible="{Binding ShowEmptyMessage, Converter={StaticResource InverseBoolConverter}}"
                            IsGrouped="{Binding IsGrouped}">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="12,8"
                              BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#333333}">
                            <Label Text="{Binding Key}"
                                   FontAttributes="Bold"
                                   FontSize="16" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,6"
                               Padding="12"
                               BorderColor="LightGray">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <!-- Checkbox for multi-select -->
                                <CheckBox Grid.Column="0"
                                          IsChecked="{Binding IsSelected}"
                                          VerticalOptions="Center"
                                          WidthRequest="40" />
                                <!-- Action Info -->
                                <StackLayout Grid.Column="1">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="{Binding ActionName}"
                                               FontSize="18"
                                               FontAttributes="Bold" />
                                        <!-- Badges for Training Status and Local Storage -->
                                        <StackLayout Grid.Column="1"
                                                     Orientation="Horizontal"
                                                     HorizontalOptions="End">
                                            <Frame IsVisible="{Binding IsPartOfTraining}"
                                                   BackgroundColor="#4CAF50"
                                                   Padding="5,2"
                                                   CornerRadius="4"
                                                   HasShadow="False">
                                                <Label Text="Training"
                                                       TextColor="White"
                                                       FontSize="11" />
                                            </Frame>
                                            <Frame IsVisible="{Binding IsChained}"
                                                   BackgroundColor="#2196F3"
                                                   Padding="5,2"
                                                   CornerRadius="4"
                                                   Margin="4,0,0,0"
                                                   HasShadow="False">
                                                <Label Text="Chained"
                                                       TextColor="White"
                                                       FontSize="11" />
                                            </Frame>
                                            <Frame IsVisible="{Binding IsLocal}"
                                                   BackgroundColor="#FF9800"
                                                   Padding="5,2"
                                                   CornerRadius="8"
                                                   Margin="4,0,0,0"
                                                   HasShadow="True"
                                                   BorderColor="#E65100">
                                                <StackLayout Orientation="Horizontal"
                                                             Spacing="3">
                                                    <Image Source="local_icon.png"
                                                           HeightRequest="12"
                                                           WidthRequest="12"
                                                           VerticalOptions="Center" />
                                                    <Label Text="LOCAL"
                                                           TextColor="White"
                                                           FontSize="11"
                                                           FontAttributes="Bold" />
                                                </StackLayout>
                                            </Frame>
                                        </StackLayout>
                                    </Grid>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding ActionArray.Count, StringFormat='{0} steps'}"
                                               TextColor="Gray"
                                               VerticalOptions="Center" />
                                        <Label Text="|"
                                               TextColor="Gray"
                                               Margin="5,0"
                                               VerticalOptions="Center" />
                                        <Label Text="{Binding ActionType}"
                                               TextColor="Gray"
                                               VerticalOptions="Center" />
                                        <Label Text="|"
                                               TextColor="Gray"
                                               Margin="5,0"
                                               VerticalOptions="Center" />
                                        <!-- Fix date format to be more readable and accurate -->
                                        <Label Text="{Binding CreatedAt, StringFormat='Created: {0:MMM d, yyyy h:mm tt}'}"
                                               TextColor="Gray"
                                               VerticalOptions="Center"
                                               FontSize="12" />
                                    </StackLayout>
                                    <!-- Performance Metrics -->
                                    <StackLayout Orientation="Horizontal"
                                                 IsVisible="{Binding HasMetrics}">
                                        <Label Text="{Binding SuccessRate, StringFormat='Success: {0:P0}'}"
                                               TextColor="#4CAF50"
                                               FontSize="12"
                                               VerticalOptions="Center" />
                                        <Label Text="|"
                                               TextColor="Gray"
                                               Margin="5,0"
                                               FontSize="12"
                                               VerticalOptions="Center" />
                                        <Label Text="{Binding UsageCount, StringFormat='Used: {0} times'}"
                                               TextColor="Gray"
                                               FontSize="12"
                                               VerticalOptions="Center" />
                                    </StackLayout>
                                </StackLayout>
                                <!-- Action Buttons -->
                                <StackLayout Grid.Column="2"
                                             Orientation="Vertical"
                                             Spacing="5">
                                    <Button Text="Run"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:ActionPage}}, Path=ToggleSimulateActionGroupCommand}"
                                            CommandParameter="{Binding .}"
                                            WidthRequest="80"
                                            HeightRequest="36"
                                            VerticalOptions="Center" />
                                    <Button Text="Chain"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:ActionPage}}, Path=ChainActionCommand}"
                                            CommandParameter="{Binding .}"
                                            WidthRequest="80"
                                            HeightRequest="36"
                                            BackgroundColor="#2196F3"
                                            VerticalOptions="Center" />
                                </StackLayout>
                            </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:ActionPage}}, Path=RowTappedCommand}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <!-- Local Items Section -->
        <VerticalStackLayout Grid.Row="3"
                             Margin="0,16,0,8"
                             IsVisible="{Binding HasLocalItems}">
            <Label Text="Recently Recorded Actions"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                   Margin="0,0,0,8" />
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                   BorderColor="{AppThemeBinding Light=#e0e0e0, Dark=#424242}"
                   CornerRadius="8"
                   Padding="0"
                   HasShadow="True">
                <CollectionView ItemsSource="{Binding LocalItems}"
                                HeightRequest="180"
                                EmptyView="No local actions have been recorded recently">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"
                                           ItemSpacing="12" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame WidthRequest="220"
                                   Margin="6"
                                   Padding="12"
                                   CornerRadius="6"
                                   BorderColor="{AppThemeBinding Light=#e0e0e0, Dark=#424242}"
                                   BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2a2a2a}">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                                      RowSpacing="4">
                                    <Label Grid.Row="0"
                                           Text="{Binding Data.ActionGroupObject.ActionName}"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}" />
                                    <Label Grid.Row="1"
                                           Text="{Binding createdAt, StringFormat='Created: {0:g}'}"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                                    <Label Grid.Row="2"
                                           Text="{Binding Data.ActionGroupObject.ActionType}"
                                           FontSize="13"
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                                    <Label Grid.Row="3"
                                           Text="{Binding Data.ActionGroupObject.ActionArray.Count, StringFormat='{0} steps'}"
                                           FontSize="13"
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                                    <Button Grid.Row="4"
                                            Text="Import"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:ActionPage}}, Path=ImportLocalItemCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{StaticResource PrimaryColor}"
                                            TextColor="White"
                                            HeightRequest="36"
                                            Margin="0,6,0,0" />
                                </Grid>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:ActionPage}}, Path=ViewLocalItemCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>
        </VerticalStackLayout>
        <!-- Footer -->
        <Grid Grid.Row="4"
              Margin="0,10,0,0"
              ColumnDefinitions="*,Auto,*">
            <Button Grid.Column="0"
                    Text="Record New Action"
                    Command="{Binding NavigateToObservePageCommand}"
                    HorizontalOptions="Start" />
            <Button Grid.Column="1"
                    Text="Chain Selected Actions"
                    Command="{Binding ChainSelectedActionsCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    IsEnabled="{Binding HasSelectedActions}"
                    HorizontalOptions="Center" />
            <Button Grid.Column="2"
                    Text="Add Selected to Training"
                    Command="{Binding AddToTrainingCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    IsEnabled="{Binding HasSelectedActions}"
                    HorizontalOptions="End" />
        </Grid>
    </Grid>
</ContentPage>