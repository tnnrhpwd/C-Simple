<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CSimple.Pages"
             x:Class="CSimple.Pages.ActionDetailPage"
             Title="Action Details">
    <Grid RowDefinitions="Auto,*,Auto"
          Padding="16">
        <!-- Simple header -->
        <VerticalStackLayout Grid.Row="0"
                             Spacing="8">
            <Label Text="{Binding ActionName}"
                   FontSize="24"
                   FontAttributes="Bold" />
            <Label Text="{Binding ActionType}"
                   FontSize="16"
                   TextColor="Gray" />
        </VerticalStackLayout>
        <!-- Simple content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="16"
                                 Padding="0,16">
                <!-- Basic action info -->
                <Frame Padding="16"
                       BorderColor="LightGray">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Action Information"
                               FontAttributes="Bold"
                               FontSize="18" />
                        <Grid ColumnDefinitions="Auto,*"
                              RowSpacing="8"
                              ColumnSpacing="16">
                            <Label Text="Type:"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding ActionType}"
                                   Grid.Row="0"
                                   Grid.Column="1" />
                            <Label Text="Created:"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding CreatedAt}"
                                   Grid.Row="1"
                                   Grid.Column="1" />
                            <Label Text="Duration:"
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding Duration}"
                                   Grid.Row="2"
                                   Grid.Column="1" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
                <!-- Action steps (simplified) -->
                <Frame Padding="16"
                       BorderColor="LightGray">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Action Steps"
                               FontAttributes="Bold"
                               FontSize="18" />
                        <Label Text="{Binding ActionArrayFormatted}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
        <!-- Footer with buttons -->
        <HorizontalStackLayout Grid.Row="2"
                               HorizontalOptions="Center"
                               Spacing="16">
            <Button Text="Back"
                    Command="{Binding BackCommand}"
                    WidthRequest="120"
                    HeightRequest="40" />
            <Button Text="Delete"
                    Command="{Binding DeleteCommand}"
                    BackgroundColor="Red"
                    TextColor="White"
                    WidthRequest="120"
                    HeightRequest="40" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>