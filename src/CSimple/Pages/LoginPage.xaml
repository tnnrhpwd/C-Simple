<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CSimple.ViewModels"
             x:Class="CSimple.Pages.LoginPage"
             Title="Login"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundPrimary}, Dark={StaticResource BackgroundDark}}">
    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="20">
            <!-- Welcome Header -->
            <Frame BorderColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                   BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                   CornerRadius="10"
                   Padding="20"
                   Margin="0,20,0,20">
                <Grid ColumnDefinitions="Auto,*"
                      ColumnSpacing="15">
                    <Image Grid.Column="0"
                           Source="csimple_logo_png.png"
                           HeightRequest="60"
                           WidthRequest="60"
                           VerticalOptions="Start"
                           HorizontalOptions="Start" />
                    <VerticalStackLayout Grid.Column="1"
                                         Spacing="8">
                        <Label Text="Welcome to CSimple"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryLight}}"
                               HorizontalOptions="Start" />
                        <Label Text="Log in to access your AI-powered Windows assistant and unlock intelligent automation for your daily tasks."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                               HorizontalOptions="Start"
                               HorizontalTextAlignment="Start"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>
            <!-- Login Form -->
            <Frame BorderColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                   BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                   CornerRadius="10"
                   Padding="25">
                <VerticalStackLayout Spacing="20">
                    <Label Text="Log In"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}" />
                    <VerticalStackLayout Spacing="15">
                        <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundSecondary}, Dark={StaticResource BackgroundTertiary}}"
                               BorderColor="Transparent"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False">
                            <Entry Placeholder="Username or Email"
                                   Text="{Binding Email}"
                                   Keyboard="Email"
                                   BackgroundColor="Transparent"
                                   PlaceholderColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                                   Margin="15,10"
                                   Completed="OnEntryCompleted" />
                        </Frame>
                        <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundSecondary}, Dark={StaticResource BackgroundTertiary}}"
                               BorderColor="Transparent"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False">
                            <Entry x:Name="PasswordEntry"
                                   Placeholder="Password"
                                   Text="{Binding Password}"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"
                                   PlaceholderColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                                   Margin="15,10"
                                   Completed="OnEntryCompleted" />
                        </Frame>
                    </VerticalStackLayout>
                    <Button Text="Log In"
                            Command="{Binding LoginCommand}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryLight}}"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="50"
                            Margin="0,10,0,0" />
                    <Label Text="Press Enter in any field to log in"
                           FontSize="12"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                           Margin="0,5,0,0" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>