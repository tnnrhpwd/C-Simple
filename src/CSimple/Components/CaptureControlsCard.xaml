<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSimple.Components.CaptureControlsCard">
    <Border Style="{StaticResource CardStyle}"
            FlexLayout.Basis="{OnIdiom Phone=100%, Default=48%}"
            FlexLayout.Grow="1"
            Margin="0,0,8,16">
        <VerticalStackLayout>
            <Label Text="Capture Controls"
                   Style="{StaticResource SubHeaderLabelStyle}" />
            <Grid ColumnDefinitions="Auto,*,Auto"
                  RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                  Margin="0,8">
                <!-- User Data Capture Row Headers -->
                <Label Text="User Input"
                       Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="3"
                       Style="{StaticResource BodyLabelStyle}"
                       FontAttributes="Bold"
                       Margin="0,0,0,12" />
                <!-- User Touch Row -->
                <Label Text="Touch"
                       Grid.Row="1"
                       Grid.Column="0"
                       VerticalOptions="Center"
                       Margin="0,0,12,0" />
                <ProgressBar Progress="0.8"
                             Grid.Row="1"
                             Grid.Column="1"
                             VerticalOptions="Center"
                             ProgressColor="{StaticResource TertiaryColor}" />
                <Button Text="{Binding UserTouchButtonText}"
                        Grid.Row="1"
                        Grid.Column="2"
                        Command="{Binding ToggleUserTouchCommand}"
                        Style="{StaticResource ModernButtonStyle}" />
                <!-- User Visual Row -->
                <Label Text="Visual"
                       Grid.Row="2"
                       Grid.Column="0"
                       VerticalOptions="Center"
                       Margin="0,0,12,0" />
                <ProgressBar Progress="0.6"
                             Grid.Row="2"
                             Grid.Column="1"
                             VerticalOptions="Center"
                             ProgressColor="{StaticResource TertiaryColor}" />
                <Button Text="{Binding UserVisualButtonText}"
                        Grid.Row="2"
                        Grid.Column="2"
                        Command="{Binding ToggleUserVisualCommand}"
                        Style="{StaticResource ModernButtonStyle}" />
                <!-- User Audio Row -->
                <Label Text="Audio"
                       Grid.Row="3"
                       Grid.Column="0"
                       VerticalOptions="Center"
                       Margin="0,0,12,0" />
                <ProgressBar Progress="{Binding UserAudioLevel}"
                             Grid.Row="3"
                             Grid.Column="1"
                             VerticalOptions="Center"
                             ProgressColor="{StaticResource TertiaryColor}" />
                <Button Text="{Binding UserAudibleButtonText}"
                        Grid.Row="3"
                        Grid.Column="2"
                        Command="{Binding ToggleUserAudibleCommand}"
                        Style="{StaticResource ModernButtonStyle}" />
                <!-- System Capture Row Headers -->
                <Label Text="System Data"
                       Grid.Row="4"
                       Grid.Column="0"
                       Grid.ColumnSpan="3"
                       Style="{StaticResource BodyLabelStyle}"
                       FontAttributes="Bold"
                       Margin="0,20,0,12" />
                <!-- PC Visual Row -->
                <Label Text="Visual"
                       Grid.Row="5"
                       Grid.Column="0"
                       VerticalOptions="Center"
                       Margin="0,0,12,0" />
                <ProgressBar Progress="0.5"
                             Grid.Row="5"
                             Grid.Column="1"
                             VerticalOptions="Center"
                             ProgressColor="{StaticResource PrimaryColor}" />
                <Button Text="{Binding PCVisualButtonText}"
                        Grid.Row="5"
                        Grid.Column="2"
                        Command="{Binding TogglePCVisualCommand}"
                        Style="{StaticResource ModernButtonStyle}" />
                <!-- PC Audio Row -->
                <Label Text="Audio"
                       Grid.Row="6"
                       Grid.Column="0"
                       VerticalOptions="Center"
                       Margin="0,0,12,0" />
                <ProgressBar Progress="{Binding PCAudioLevel}"
                             Grid.Row="6"
                             Grid.Column="1"
                             VerticalOptions="Center"
                             ProgressColor="{StaticResource PrimaryColor}" />
                <Button Text="{Binding PCAudibleButtonText}"
                        Grid.Row="6"
                        Grid.Column="2"
                        Command="{Binding TogglePCAudibleCommand}"
                        Style="{StaticResource ModernButtonStyle}" />
            </Grid>
        </VerticalStackLayout>
    </Border>
</ContentView>