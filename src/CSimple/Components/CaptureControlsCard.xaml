<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSimple.Components.CaptureControlsCard">
    <Border Style="{StaticResource ModernCardStyle}"
            FlexLayout.Basis="{OnIdiom Phone=100%, Default=48%}"
            FlexLayout.Grow="1"
            MinimumWidthRequest="300">
        <VerticalStackLayout Spacing="12">
            <Label Text="Capture Controls"
                   Style="{StaticResource SubHeaderStyle}" />
            <!-- User Data Controls -->
            <Frame Style="{StaticResource PreviewFrameStyle}"
                   Padding="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="User Input"
                           Style="{StaticResource CaptionStyle}"
                           Margin="0,0,0,8" />
                    <Grid ColumnDefinitions="Auto,*,Auto"
                          RowDefinitions="Auto,Auto,Auto"
                          RowSpacing="12">
                        <!-- User Touch Row -->
                        <Label Text="Touch"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalOptions="Center"
                               Margin="0,0,12,0" />
                        <ProgressBar Progress="0.8"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     VerticalOptions="Center"
                                     ProgressColor="{StaticResource TertiaryColor}" />
                        <Button Text="{Binding UserTouchButtonText}"
                                Grid.Row="0"
                                Grid.Column="2"
                                Command="{Binding ToggleUserTouchCommand}"
                                Style="{StaticResource SuccessButtonStyle}" />
                        <!-- User Visual Row -->
                        <Label Text="Visual"
                               Grid.Row="1"
                               Grid.Column="0"
                               VerticalOptions="Center"
                               Margin="0,0,12,0" />
                        <ProgressBar Progress="0.6"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     VerticalOptions="Center"
                                     ProgressColor="{StaticResource TertiaryColor}" />
                        <Button Text="{Binding UserVisualButtonText}"
                                Grid.Row="1"
                                Grid.Column="2"
                                Command="{Binding ToggleUserVisualCommand}"
                                Style="{StaticResource SuccessButtonStyle}" />
                        <!-- User Audio Row -->
                        <Label Text="Audio"
                               Grid.Row="2"
                               Grid.Column="0"
                               VerticalOptions="Center"
                               Margin="0,0,12,0" />
                        <ProgressBar Progress="{Binding UserAudioLevel}"
                                     Grid.Row="2"
                                     Grid.Column="1"
                                     VerticalOptions="Center"
                                     ProgressColor="{StaticResource TertiaryColor}" />
                        <Button Text="{Binding UserAudibleButtonText}"
                                Grid.Row="2"
                                Grid.Column="2"
                                Command="{Binding ToggleUserAudibleCommand}"
                                Style="{StaticResource SuccessButtonStyle}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            <!-- System Data Controls -->
            <Frame Style="{StaticResource PreviewFrameStyle}"
                   Padding="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="System Data"
                           Style="{StaticResource CaptionStyle}"
                           Margin="0,0,0,8" />
                    <Grid ColumnDefinitions="Auto,*,Auto"
                          RowDefinitions="Auto,Auto"
                          RowSpacing="12">
                        <!-- PC Visual Row -->
                        <Label Text="Visual"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalOptions="Center"
                               Margin="0,0,12,0" />
                        <ProgressBar Progress="0.5"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     VerticalOptions="Center"
                                     ProgressColor="{StaticResource PrimaryColor}" />
                        <Button Text="{Binding PCVisualButtonText}"
                                Grid.Row="0"
                                Grid.Column="2"
                                Command="{Binding TogglePCVisualCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" />
                        <!-- PC Audio Row -->
                        <Label Text="Audio"
                               Grid.Row="1"
                               Grid.Column="0"
                               VerticalOptions="Center"
                               Margin="0,0,12,0" />
                        <ProgressBar Progress="{Binding PCAudioLevel}"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     VerticalOptions="Center"
                                     ProgressColor="{StaticResource PrimaryColor}" />
                        <Button Text="{Binding PCAudibleButtonText}"
                                Grid.Row="1"
                                Grid.Column="2"
                                Command="{Binding TogglePCAudibleCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Border>
</ContentView>