<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="C_Simple.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:C_Simple"
    Shell.FlyoutBehavior="Disabled"
    Title="C_Simple">

  <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:HomePage}" />
        <ShellContent Title="Login" ContentTemplate="{DataTemplate local:LoginPage}" />
        <ShellContent Title="Inputs" ContentTemplate="{DataTemplate local:InputsPage}" />
        <ShellContent Title="Contact" ContentTemplate="{DataTemplate local:ContactPage}" />
        <ShellContent Title="About" ContentTemplate="{DataTemplate local:AboutPage}" />
    </TabBar>

</Shell>
